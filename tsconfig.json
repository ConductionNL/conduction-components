{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "hooks": ["copy-files"],
  "include": ["src", "src/**/*.css"],
  "exclude": ["node_modules", "**/__tests__/*", "lib/**/*"]
}
